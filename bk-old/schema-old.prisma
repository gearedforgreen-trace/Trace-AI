generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

generator kysely {
  provider = "prisma-kysely"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Test {
  id Int @id @default(autoincrement())
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
  SUSPENDED
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]

  role      String?
  status    UserStatus @default(ACTIVE)
  banReason String?

  suspensionReason    String?
  suspensionExpiresAt DateTime?

  userTotalPointsId String
  Member            Member[]
  Invitation        Invitation[]
  RedeemHistory     RedeemHistory[]
  RecycleHistory    RecycleHistory[]
  UserTotalPoints   UserTotalPoints[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  activeOrganizationId String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Organization {
  id          String       @id
  name        String
  slug        String?
  logo        String?
  createdAt   DateTime
  metadata    String?
  members     Member[]
  invitations Invitation[]
  Coupon      Coupon[]
  Store       Store[]
  Bin         Bin[]

  @@unique([slug])
  @@map("organization")
}

model Member {
  id             String       @id
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  role           String
  createdAt      DateTime

  @@map("member")
}

model Invitation {
  id             String       @id
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  email          String
  role           String?
  status         String
  expiresAt      DateTime
  inviterId      String
  user           User         @relation(fields: [inviterId], references: [id], onDelete: Cascade)

  @@map("invitation")
}

model Coupon {
  id             String       @id @default(uuid()) // Unique identifier
  name           String
  description    String?
  imageUrl       String // URL of the image
  // status         Status  @default(ACTIVE) // Enum for status
  couponType     CouponType
  couponCode     String
  pointsToRedeem Int
  // startDate
  // endDate
  createdAt      DateTime     @default(now()) // Timestamp for record creation
  updatedAt      DateTime     @updatedAt // Auto-updated timestamp
  organizationId String
  Organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

model UserTotalPoints {
  id          String   @id @default(uuid()) // Unique identifier
  userId      String
  points      Int
  description String?
  createdAt   DateTime @default(now()) // Timestamp for record creation
  updatedAt   DateTime @updatedAt // Auto-updated timestamp
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RedeemHistory {
  id          String   @id @default(uuid()) // Unique identifier
  // couponId // kon coupon use korese?
  userId      String
  points      Int
  description String?
  createdAt   DateTime @default(now()) // Timestamp for record creation
  updatedAt   DateTime @updatedAt // Auto-updated timestamp
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RecycleHistory {
  id          String   @id @default(uuid()) // Unique identifier
  userId      String
  points      Int
  description String?
  createdAt   DateTime @default(now()) // Timestamp for record creation
  updatedAt   DateTime @updatedAt // Auto-updated timestamp
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RewardRules {
  id          String   @id @default(uuid())
  description String?
  material    String // relation
  unit        Int
  point       Int
  createdAt   DateTime @default(now()) // Timestamp for record creation
  updatedAt   DateTime @updatedAt // Auto-updated timestamp
}

model Material {
  id          String   @id @default(uuid()) // Unique identifier
  name        String
  description String?
  // status      Status   @default(ACTIVE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Bin         Bin[]
}

model Store {
  id             String       @id @default(uuid()) // Unique identifier
  name           String
  description    String?
  imageUrl       String
  // status         Status       @default(ACTIVE)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organizationId String?
  Organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  Bin            Bin[]
  address1       String
  address2       String?
  city           String
  state          String
  zip            String
  country        String
  lat            Float
  lng            Float
}

model Bin {
  id             String       @id @default(uuid()) // Unique identifier
  number         String
  materialId     String
  Material       Material     @relation(fields: [materialId], references: [id])
  storeId        String
  Store          Store        @relation(fields: [storeId], references: [id], onDelete: Cascade)
  description    String?
  imageUrl       String
  // status         Status       @default(ACTIVE)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organizationId String
  Organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

model FavouriteList {
  id String @id @default(uuid())
  // userId
  // coupon
}

enum CouponType {
  FIXED
  PERCENTAGE
}
