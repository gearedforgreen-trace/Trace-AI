generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

generator kysely {
  provider = "prisma-kysely"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  role          String?
  banned        Boolean?
  banReason     String?
  banExpires    DateTime?
  sessions      Session[]
  accounts      Account[]
  members       Member[]
  invitations   Invitation[]

  username        String?
  displayUsername String?
  phoneNumber     String?
  address         String?
  postalCode      String?
  status          String

  state              String?
  FavoriteCouponList FavoriteCouponList[]
  RedeemHistory      RedeemHistory[]
  RecycleHistory     RecycleHistory[]
  UserTotalPoint     UserTotalPoint[]

  @@unique([email])
  @@unique([username])
  @@map("user")
}

model Session {
  id                   String   @id
  expiresAt            DateTime
  token                String
  createdAt            DateTime
  updatedAt            DateTime
  ipAddress            String?
  userAgent            String?
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy       String?
  activeOrganizationId String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Organization {
  id          String       @id
  name        String
  slug        String?
  logo        String?
  createdAt   DateTime
  metadata    String?
  members     Member[]
  invitations Invitation[]
  stores      Store[]
  Coupon      Coupon[]

  @@unique([slug])
  @@map("organization")
}

model Member {
  id             String       @id
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  role           String
  createdAt      DateTime

  @@map("member")
}

model Invitation {
  id             String       @id
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  email          String
  role           String?
  status         String
  expiresAt      DateTime
  inviterId      String
  user           User         @relation(fields: [inviterId], references: [id], onDelete: Cascade)

  @@map("invitation")
}

enum StoreStatus {
  ACTIVE
  INACTIVE

  @@map("store_status")
}

model Store {
  id          String      @id @default(ulid())
  name        String
  description String?
  imageUrl    String?
  status      StoreStatus @default(ACTIVE)

  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  bins Bin[]

  address1 String
  address2 String?
  city     String
  state    String
  zip      String
  country  String
  lat      Float
  lng      Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("store")
}

model Material {
  id           String       @id @default(ulid())
  name         String
  description  String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  bins         Bin[]
  rewardRuleId String?
  rewardRule   RewardRules? @relation(fields: [rewardRuleId], references: [id])

  @@map("material")
}

model RewardRules {
  id          String   @id @default(ulid())
  description String?
  unitType    String
  unit        Int
  point       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  materials Material[]

  @@map("reward_rules")
}

model RedeemHistory {
  id          String   @id @default(uuid()) // Unique identifier
  couponId    String
  userId      String
  points      Int
  description String?
  createdAt   DateTime @default(now()) // Timestamp for record creation
  updatedAt   DateTime @updatedAt // Auto-updated timestamp
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RecycleHistory {
  id        String   @id @default(uuid()) // Unique identifier
  userId    String
  points    Int
  mediaUrl  String?
  createdAt DateTime @default(now()) // Timestamp for record creation
  updatedAt DateTime @updatedAt // Auto-updated timestamp
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserTotalPoint {
  id          String @id @default(ulid()) // Unique identifier
  userId      String @unique
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  totalPoints Int    @default(0) // Tracks the user's total points

  @@map("user_total_point")
}

enum BinStatus {
  ACTIVE
  INACTIVE

  @@map("bin_status")
}

model Bin {
  id          String    @id @default(ulid())
  number      String
  materialId  String
  material    Material  @relation(fields: [materialId], references: [id])
  storeId     String
  store       Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  description String?
  imageUrl    String?
  status      BinStatus @default(ACTIVE)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("bin")
}

model Coupon {
  id                 String               @id @default(ulid()) // Unique identifier
  name               String
  description        String?
  imageUrl           String // URL of the image
  status             Status               @default(ACTIVE) // Enum for status
  couponType         CouponType // Enum for coupon type
  dealType           DealType // Enum for deal type
  isFeatured         Boolean // Flag to mark as featured
  couponCode         String
  pointsToRedeem     Int
  startDate          DateTime
  endDate            DateTime
  createdAt          DateTime             @default(now()) // Timestamp for record creation
  updatedAt          DateTime             @updatedAt // Auto-updated timestamp
  organizationId     String
  organization       Organization         @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  FavoriteCouponList FavoriteCouponList[]

  @@map("coupon")
}

model FavoriteCouponList {
  id        String   @id @default(ulid()) // Unique identifier
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  couponId  String
  coupon    Coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) // Timestamp for when the favorite was added

  @@unique([userId, couponId]) // Ensures a user cannot favorite the same coupon multiple times
  @@map("favorite_coupon_list")
}

enum Status {
  ACTIVE
  INACTIVE

  @@map("status")
}

enum CouponType {
  FIXED
  PERCENTAGE

  @@map("coupon_type")
}

enum DealType {
  NOPOINTS
  POINTS

  @@map("deal_type")
}
